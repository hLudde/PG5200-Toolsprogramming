<Window DataContext="{Binding Main, Source={StaticResource Locator}}"
        x:Class="RPGCharacterSheet.View.CharacterCreation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGCharacterSheet.View"
        mc:Ignorable="d"
        Title="CharacterCreation" Height="450" Width="800">
    <Grid>
        <Label Content="Character Name" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="132,14,0,0" FontSize="15" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="114"/>
        <Label Content="Race" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,45,0,0"/>
        <ComboBox HorizontalAlignment="Left" Margin="132,47,0,0" FontSize="15"  VerticalAlignment="Top" Width="114">
            <ComboBoxItem IsSelected="True">Dwarf</ComboBoxItem>
            <ComboBoxItem>Human</ComboBoxItem>
            <ComboBoxItem>Elf</ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
