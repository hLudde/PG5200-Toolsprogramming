<Window DataContext="{Binding Main, Source={StaticResource Locator}}"
        x:Class="RPGCharacterSheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGCharacterSheet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="RPG Character Database" FontSize="40" Margin="173,50,173,289"/>
        <Button Content="Create new character" FontSize="15" HorizontalAlignment="Left" Margin="200,198,0,0" VerticalAlignment="Top" Width="170" Height="40" Command="{Binding }"/>
        <Button Content="Load existing character" FontSize="15" Margin="0,198,200,0" VerticalAlignment="Top" Height="40" HorizontalAlignment="Right" Width="170"/>
    </Grid>
</Window>
